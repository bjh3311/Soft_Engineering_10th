             <div class="shop-detail-box-main">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <% product.files.forEach(function(file,index){ %>
                            <div class="carousel-item <% if(index==0) {%>
                                active"
                                <%}else { %>
                                    "
                                 <% } %>> <img class="carousel_img" src="/upload/<%= file.filename %>" alt="<%= file.filename %>.jpg"> </div>
                            <% }) %>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
						<i class="fa fa-angle-left" aria-hidden="true"></i>
						<span class="sr-only">Previous</span>
					</a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
						<i class="fa fa-angle-right" aria-hidden="true"></i>
						<span class="sr-only">Next</span>
					</a>
                        <ol class="carousel-indicators">
                            <% product.files.forEach(function(file,index){ %>
                            <li data-target="#carousel-example-1" data-slide-to="0" class=<% if(index==0) {%>
                                "active"
                                <% }else { %>
                                ""
                                <%} %>>
                                <img class="d-block w-100 img-fluid" src="/upload/<%= file.filename %>" alt="" />
                            </li>
                            <%})%>
                        </ol>
                    </div>
                    </div>
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <form action="/products/<%= product._id %>?_method=put" method="post"  class="form-horizontal" enctype="multipart/form-data">
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="name"class=" form-control-label">상품 이름</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="text" id="name" name="name" placeholder="상품 이름 작성" class="form-control" value="<%= product.name %>">
                                    <% if(errors.name) { %>
                                        <span><%= errors.name.message %></span>
                                    <%} %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="price" class=" form-control-label">가격</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="number" id="price" name="price" placeholder="상품 가격 입력" class="form-control" value="<%= product.price %>">
                                    <% if(errors.price) { %>
                                        <span><%= errors.price.message %></span>
                                    <%} else { %>
                                        <small class="form-text text-muted">상품 가격 입력하세요.</small>
                                    <% } %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="manufacturer" class=" form-control-label">상품 제조사</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="manufacturer" id="manufacturer" class="form-control" value="<%= product.manufacturer %>">
                                        <option value="1"<% if(product.manufacturer==1){%>
                                            selected="selected"
                                        <% } %>>제조사1</option>
                                        <option value="2"<% if(product.manufacturer==2){%>
                                            selected="selected"
                                        <% } %>>제조사2</option>
                                        <option value="3"<% if(product.manufacturer==3){%>
                                            selected="selected"
                                        <% } %>>제조사3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="taste" class=" form-control-label">상품 맛</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="taste" id="taste" class="form-control" value="<%= product.taste %>">
                                        <option value="1"<% if(product.taste==1){%>
                                            selected="selected"
                                        <% } %>>맛1</option>
                                        <option value="2"<% if(product.taste==2){%>
                                            selected="selected"
                                        <% } %>>맛2</option>
                                        <option value="3"<% if(product.taste==3){%>
                                            selected="selected"
                                        <% } %>>맛3</option>
                                    </select>
                                </div>
                            </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="weight" class=" form-control-label">상품 중량</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="weight" id="weight" class="form-control" value="<%= product.weight %>">
                                <option value="200g" <% if(product.weight=="200g"){%>
                                        selected="selected"
                                    <% } %>>200g</option>
                                <option value="600g"<% if(product.weight=="600g"){%>
                                    selected="selected"
                                <% } %>>600g</option>
                                <option value="1.2kg" <% if(product.weight=="1.2kg"){%>
                                    selected="selected"
                                <% } %>>1.2kg</option>
                            </select>
                            <% if(errors.weight) { %>
                                <span><%= errors.weight.message %></span>
                            <%}  %>
                        </div>
                    </div>
                           <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="origin" class=" form-control-label">상품 원산지</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <select name="origin" id="origin" class="form-control" value="<%= product.origin %>">
                                        <option value="1"<% if(product.origin==1){%>
                                            selected="selected"
                                        <% } %>>일반원두</option>
                                        <option value="3"<% if(product.origin==3){%>
                                            selected="selected"
                                        <% } %>>고급원두</option>
                                        <option value="4" <% if(product.origin==4){%>
                                            selected="selected"
                                        <% } %>>입문자용 원두</option>
                                    </select>
                                    <% if(errors.origin) { %>
                                        <span><%= errors.origin.message %></span>
                                    <%}  %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="body" class=" form-control-label">상품 상세 정보</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <textarea name="body" id="body" rows="9" placeholder="상품 상세 정보 입력하시오." class="form-control"><%= product.body %></textarea>
                                    <% if(errors.body) { %>
                                        <span><%= errors.body.message %></span>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="attachments" class=" form-control-label">여러 상품 이미지 등록</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="file" id="file-multiple-input" name="attachments" multiple="" class="form-control-file">
                                </div>
                            </div> 
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="stock" class=" form-control-label">재고</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="number" id="stock" name="stock" placeholder="0" class="form-control" value="<%= product.stock %>">
                                    <small class="help-block form-text">상품 재고 입력</small>
                                </div>
                                <% if(errors.stock) { %>
                                    <span><%= errors.stock.message %></span>
                                <% } %>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="tax" class=" form-control-label">택배비</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input type="number" id="tax" name="tax" placeholder="1000" class="form-control" value="<%= product.tax %>">
                                    <small class="help-block form-text">택배비 입력</small>
                                </div>
                                <% if(errors.tax) { %>
                                    <span><%= errors.tax.message %></span>
                                <% } %>
                            </div>
                                <input type="hidden" id="flag" name="flag" value="true">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> 상품 수정
                                </button>
                              <a href="/products/<%= product._id %>">
                                  <button type="button" class="btn btn-danger btn-sm">
                                  <i class="fa fa-ban"></i> 상품 수정 안함
                              </button>
                              </a>

                        </form>

						</div>
          </div>
                </div>
            </div>

			<div class="row my-5">
				<div class="card card-outline-secondary my-4">

			</div>

    <!-- End Shop Page -->
        </div>
        <!-- END PAGE CONTAINER-->

    </div>


</body>
<script>
  document.getElementById('manufacturer').value = <%= product.manufacturer %>;
  document.getElementById('taste').value = <%= product.taste %>;
  document.getElementById('weight').value = <%= product.weight %>;
  document.getElementById('origin').value = <%= product.origin %>;
</script>
