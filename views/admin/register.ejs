    <div class="shop-box-inner">
        <div class="container">
            <div class="row">
                <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                    <div class="right-product-box">
                        <div class="product-categorie-box">
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                                    <div class="row" style="padding:20px">
                                        <div class="card">
                                            <div class="card-header">
                                                <strong>상품 등록</strong> 형식
                                            </div>
                                            <div class="card-body card-block">
                                                <form action="/products" method="post" class="form-horizontal" enctype="multipart/form-data">
                                                    <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="name"class=" form-control-label">상품 이름</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <input type="text" id="name" name="name" placeholder="상품 이름 작성" class="form-control">
                                                            <% if(errors.name) { %>
                                                                <span><%= errors.name.message %></span>
                                                            <%} %>
                                                        </div>
                                                    </div>
                                                    <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="price" class=" form-control-label">가격</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <input type="number" id="price" name="price" placeholder="상품 가격 입력" class="form-control">
                                                            <% if(errors.price) { %>
                                                                <span><%= errors.price.message %></span>
                                                            <%} else { %>
                                                                <small class="form-text text-muted">상품 가격 입력하세요.</small>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="manufacturer" class=" form-control-label">상품 제조사</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <select name="manufacturer" id="manufacturer" class="form-control">
                                                                <option value="1">제조사1</option>
                                                                <option value="2">제조사2</option>
                                                                <option value="3">제조사3</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="taste" class=" form-control-label">상품 맛</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <select name="taste" id="taste" class="form-control">
                                                                <option value="1">맛1</option>
                                                                <option value="2">맛2</option>
                                                                <option value="3">맛3</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="weight" class=" form-control-label">상품 중량</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="weight" id="weight" class="form-control">
                                                        <option value="200g">200g</option>
                                                        <option value="600g">600g</option>
                                                        <option value="1.2kg">1.2kg</option>
                                                    </select>
                                                    <% if(errors.weight) { %>
                                                        <span><%= errors.weight.message %></span>
                                                    <%}  %>
                                                </div>
                                            </div>
                                                   <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="origin" class=" form-control-label">상품 종류</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <select name="origin" id="origin" class="form-control">
                                                                <option value="1">일반 원두</option>
                                                                <option value="3">고급 원두</option>
                                                                <option value="4">입문용 원두</option>
                                                            </select>
                                                            <% if(errors.origin) { %>
                                                                <span><%= errors.origin.message %></span>
                                                            <%}  %>
                                                        </div>
                                                    </div>
                                                    <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="body" class=" form-control-label">상품 상세 정보</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <textarea name="body" id="body" rows="9" placeholder="상품 상세 정보 입력하시오."  value="" class="form-control"></textarea>
                                                            <% if(errors.body) { %>
                                                                <span><%= errors.body.message %></span>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <!--
                                                    <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="file" class=" form-control-label">상품 대표 이미지 등록</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <input type="file" id="file" name="attachment" class="form-control-file">
                                                        </div>
                                                    </div>-->
                                                    
                                                    <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="attachments" class=" form-control-label">여러 상품 이미지 등록(최대 3개)</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <input type="file" id="file-multiple-input" name="attachments" multiple="" class="form-control-file">
                                                        </div>
                                                        <% if(files) { %>
                                                            <span><%= files.error %></span>
                                                        <% } %>
                                                    </div> 
                                                    <div class="row form-group">
                                                        <div class="col col-md-3">
                                                            <label for="stock" class=" form-control-label">재고</label>
                                                        </div>
                                                        <div class="col-12 col-md-9">
                                                            <input type="number" id="stock" name="stock" placeholder="0" class="form-control">
                                                            <small class="help-block form-text">상품 재고 입력</small>
                                                        </div>
                                                    </div>
                                                    <div class="card-footer">
                                                        <button type="submit" class="btn btn-primary btn-sm">
                                                            <i class="fa fa-dot-circle-o"></i> 상품 등록
                                                        </button>
                                                      <a href="/admin/shop">
                                                          <button type="reset" class="btn btn-danger btn-sm" onclick="location.href='/admin/shop'">
                                                          <i class="fa fa-ban"></i> 상품 등록 안함
                                                      </button>
                                                      </a>
                                                      <% if(errors.unhandle){ %>
                                                        <span><%= errors.unhandle %></span>
                                                    <%}%>
                                                  </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
