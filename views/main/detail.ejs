<body>
  <!-- Start Main Top -->
  <header class="main-header">
      <!-- Start Navigation -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default bootsnav">
           <div class="container-fluid">
          <div class="row" float="right">
          <% if(isAuthenticated){ %>
              <span><%= currentUser.username %> 환영합니다.</span>
              <button type="button" onclick="location.href='/users/logout'">Logout</button>
          <% } else { %>
              <div class="login">
                  <form action="/users/login" method="post">
                    ID <input type="text" name="username" id="username" value="<%= username %>" placeholder="id">
                    PASSWORD <input type="password" name="password" id="password" placeholder="password">
                    <input class="" type="submit" value="Submit">
                  </form>
                </div>
                <div class="col-xs-12">
                  <button type="button" class="btn btn-outline-secondary btn-sm" onclick="location.href='/users/signup'">ID/PW 찾기</button>
                  <button type="button" class="btn btn-outline-secondary btn-sm" onclick="location.href='/users/signup'">회원가입</button>
                </div>
          <% } %>
      </div>
          </div>
          <div class="container">
              <!-- Start Header Navigation -->
              <div class="navbar-header">
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                  <i class="fa fa-bars"></i>
              </button>
          </div>
              <!-- End Header Navigation -->
              <!--, and other content for toggling -->
              <div class="collapse navbar-collapse" id="navbar-menu">
                  <ul class="nav navbar-nav ml-auto" data-in="fadeInDown" data-out="fadeOutUp">
                      <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                      <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li> <!--about.html -> /about-->
                      <li class="dropdown active">
                          <a href="#" class="nav-link dropdown-toggle arrow" data-toggle="dropdown">SHOP</a>
                          <ul class="dropdown-menu">
                              <li><a href="/category">Shoplist</a></li>
                              <li><a href="/cart">Cart</a></li>
                              <li><a href="/order_list">Orderlist</a></li>
                          </ul>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="nav-link dropdown-toggle arrow" data-toggle="dropdown">BOARD</a>
                        <ul class="dropdown-menu">
                            <li><a href="/notice">Notice</a></li>
                            <li><a href="/contact-us">Contact Us</a></li>
                        </ul>
                      </li>
                      <li class="nav-item"><a class="nav-link" href="/gallery">Gallery</a></li>
                  </ul>
              </div>
              <!-- /.navbar-collapse -->
              <!-- Start Atribute Navigation -->
              <div class="attr-nav" style="padding-right: 10px;">
                <ul>
                    <% if(isAuthenticated){ %>
                    <a href="/cart">
                        <i class="fa fa-shopping-bag">
                            <% if(session.cart){ %>
                                <span class="badge">
                                    <%= session.cart.totalQty %>
                                </span>
                                <% } else { %>
                                    <span class="badge">0</span>
                                    <% } %>
                        </i>
                        My Cart
                    </a>
                    <% } else { %>
                        <a href="#" onclick="alert('로그인을 진행해주세요')">
                            <i class="fa fa-shopping-bag">
                                <% if(session.cart){ %>
                                    <span class="badge">
                                        <%= session.cart.totalQty %>
                                    </span>
                                    <% } else { %>
                                        <span class="badge">0</span>
                                        <% } %>
                            </i>
                            My Cart
                        </a>
                    <% } %>
                </ul>
            </div>
            <!-- End Atribute Navigation -->
            </div>
        </nav>
        <!-- End Navigation -->
    </header>
    <!-- End Main Top -->

    <!-- Start Top Search -->
    <div class="top-search">
        <div class="container">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control" placeholder="Search">
                <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
            </div>
        </div>
    </div>
    <!-- End Top Search -->

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>상품 목록</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active" style="color: white">상품 목록</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Shop Detail  -->
    <div class="shop-detail-box-main">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <% product.files.forEach(function(file,index){ %>
                            <div class="carousel-item" class=<% if(index==0) {%>
                                "active"
                                <% }else { %>
                                ""
                                <%} %>>
                                 <img class="carousel_img" src="/upload/<%= file.filename %>" alt="<%= file.filename %>.jpg"> </div>
                            <% }) %>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
						<i class="fa fa-angle-left" aria-hidden="true"></i>
						<span class="sr-only">Previous</span>
					</a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
						<i class="fa fa-angle-right" aria-hidden="true"></i>
						<span class="sr-only">Next</span>
					</a>
                        <ol class="carousel-indicators">
                            <% product.files.forEach(function(file,index){ %>
                            <li data-target="#carousel-example-1" data-slide-to="0" class=<% if(index==0) {%>
                                "active"
                                <% }else { %>
                                ""
                                <%} %>>
                                <img class="d-block w-100 img-fluid" src="/upload/<%= file.filename %>" alt="" />
                            </li>
                            <%})%>
                        </ol>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <h2><%= product.name %></h2>
                        <h4><% if(product.origin==1){  %>
                            일반 원두
                        <% } else if(product.origin==3){ %>
                            고급 원두
                        <% } else {%>
                            입문자용 원두
                        <%} %>
                        </h4>
                        <h5><%= product.weight %>당 <%= product.price %>원</h5>
                  <h4>Short Description:</h4>
                  <p><%= product.body %>
                   </p>
                   <form action="/AddCart/<%= product._id %>" method="post">
                        <ul>
                            <li>
                                <div class="form-group quantity-box">
                                        <label class="control-label">수량
                                            <input class="form-control" value="0" min="0" max="20" type="number" name="count">
                                        </label>
                                </div>
                                </li>
                        </ul>
                        <div class="price-box-bar">
                            <div class="cart-and-bay-btn">
                                    <a href="/cart"  onclick="alert('장바구니에 담고 진행해주세요')"class="btn hvr-hover" data-fancybox-close="" >바로 구매 </a>
                                    <input type="submit" class="btn hvr-hover" style="float:right" data-fancybox-close="" value="장바구니 담기">
                                    <% if(isAuthenticated){ %>
                                            <a class="btn hvr-hover" data-fancybox-close="" onclick="showDestination()">배송지 선택</a>
                                    <% } else {%>
                                        <a class="btn hvr-hover" data-fancybox-close="" onclick="alert('로그인을 하고 진행해주세요!')">배송지 선택</a>
                                    <% } %>
                                <!-- <form>
                                <select name="배송지">
                                    <option value="none">기본 배송지</option>
                                </select>
                                </form> -->
                            </div>
                        </div>
                    </form>

                  </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="d-flex justify-content-center">
            <div class="content text-center">
                <div class="ratings"> <span class="product-rating">4.6</span><span>/5</span>
                    <div class="stars"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> </div>
                    <div class="rating-text"> <span>46 ratings & 15 reviews</span> </div>
                </div>
            </div>
        </div>
        <div class="row my-5">
          <div class="card card-outline-secondary my-4" style="margin:100px; width:100%;">
            <div class="card-header">
              <h2>Product Reviews</h2>
            </div>
            <div class="card-body">
              <div class="media mb-3">
                      <form action="/test" method="post" id="form_review" class="media-body" onSubmit="return checkForm();">
                        <div class="col-md-12">
                          추천
                          <select class="form-select" name="recommend" aria-label="Default select example">
                            <option value="1">추천</option>
                            <option value="2">보통</option>
                            <option value="3">비추천</option>
                          </select>
                          배송평가
                          <select class="form-select" name="delivery" aria-label="Default select example">
                            <option value="1">매우 빠름</option>
                            <option value="2">빠름</option>
                            <option value="3">보통</option>
                          </select>
                          별점
                          <select class="form-select" name="star" aria-label="Default select example">
                            <option value="5">★★★★★</option>
                            <option value="4">★★★★☆</option>
                            <option value="3">★★★☆☆</option>
                            <option value="2">★★☆☆☆</option>
                            <option value="1">★☆☆☆☆</option>
                          </select>
                        </div>
                        <div class="col-md-12">
                          <div class="media-body">
                            후기
                            <label for="body" class="form-control-label"></label>
                            <% if(isAuthenticated){ %>
                            <textarea name="body" id="body" rows="6" class="form-control" style="resize: none;"></textarea>
                            <% } else { %>
                            <textarea name="body" id="body" rows="6" class="form-control" style="resize: none;" readonly>로그인 후 상품평 등록 가능합니다.</textarea>
                            <% } %>
                            <small class="text-muted" id="counter">(0 / 최대 200자)</small>
                          </div>
                        </div>
                        <button type="submit" class="btn btn-outline-success btn-lg">리뷰 등록</button>
                      </form>
              </div>
              <hr>
              <div class="media mb-3">
                <div class="col-md-9">
                  <div class="media-body">
                    <div class="row">
                      <p>별점</p>
                      <p>추천</p>
                      <p>배송평가</p>
                    </div>
                    <p>등록 리뷰</p>
                  </div>
                </div>
                <div class="col-md-3">
                  작성자
                  <p>작성자</p>
                  등록 일자
                  <p>YYYY.MM.DD</p>
                </div>
              </div>


              <hr>
              <nav class="col-8">
                <nav class="col-8">
                  페이지네이션 위치
                  </nav>
                </nav>
            </div>
            </div>
        </div>

    <!-- End Cart -->
</body>
<script src="/js/jquery-3.2.1.min.js"></script>
<script src="/js/jquery-ui.js"></script>
<script>
  $('#body').keyup(function (e){
      var content = $(this).val();
      $('#counter').html("("+content.length+" / 최대 200자)");    //글자수 실시간 카운팅

      if (content.length > 200){
          alert("최대 200자까지 입력 가능합니다.");
          $(this).val(content.substring(0, 200));
          $('#counter').html("(200 / 최대 200자)");
      }
  });

  function checkForm(){
    var content=$('#body').val();

    if(content.length<10){
      alert("10자 이상 입력해주세요.");
      return false;
    }
  }

</script>
