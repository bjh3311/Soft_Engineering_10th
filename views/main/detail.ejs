<body>
<!-- Start Main Top -->
  <header class="main-header">
      <!-- Start Navigation -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default bootsnav">
           <div class="container-fluid">
          <div class="row" float="right">
          <% if(isAuthenticated){ %>
              <span><%= currentUser.username %> 환영합니다.</span>
              <button type="button" onclick="location.href='/logout'">Logout</button>
          <% } else { %>
              <div class="login">
                  <form action="/login" method="post">
                    ID <input type="text" name="username" id="username" value="<%= username %>" placeholder="id">
                    PASSWORD <input type="password" name="password" id="password" placeholder="password">
                    Login<input class="" type="submit" value="Submit">
                  </form>
                </div>
          <button type="button" class="register" onclick="location.href='/users/signup'">ID/PW 찾기</button>
          <button type="button" class="register" onclick="location.href='/users/signup'">회원가입</button>
          <% } %>
      </div>
          </div>
          <div class="container">
              <!-- Start Header Navigation -->
              <div class="navbar-header">
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                  <i class="fa fa-bars"></i>
              </button>
          </div>
              <!-- End Header Navigation -->
              <!--, and other content for toggling -->
              <div class="collapse navbar-collapse" id="navbar-menu">
                  <ul class="nav navbar-nav ml-auto" data-in="fadeInDown" data-out="fadeOutUp">
                      <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                      <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li> <!--about.html -> /about-->
                      <li class="dropdown active">
                          <a href="#" class="nav-link dropdown-toggle arrow" data-toggle="dropdown">SHOP</a>
                          <ul class="dropdown-menu">
              <li><a href="/shop">Sidebar Shop</a></li>
              <li><a href="/shop-detail">Shop Detail</a></li>
                              <li><a href="/cart">Cart</a></li>
                              <li><a href="/checkout">Checkout</a></li>
                              <li><a href="/my-account">My Account</a></li>
                              <li><a href="/wishlist">Wishlist</a></li>
                              <li><a href="/order_list">Orderlist</a></li>
                          </ul>
                      </li>
                      <li class="nav-item"><a class="nav-link" href="/gallery">Gallery</a></li>
                      <li class="nav-item"><a class="nav-link" href="/contact-us">Contact Us</a></li>
                  </ul>
              </div>
              <!-- /.navbar-collapse -->
              <!-- Start Atribute Navigation -->
              <div class="attr-nav">
                  <ul>
                        <a href="#">
                        <i class="fa fa-shopping-bag" style="padding-left: 10px;"></i>
                            My Cart
                        </a>
                  </ul>
              </div>
              <!-- End Atribute Navigation -->
          </div>
          
      </nav>
      <!-- End Navigation -->
  </header>
  <!-- End Main Top -->

    <!-- Start Top Search -->
    <div class="top-search">
        <div class="container">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control" placeholder="Search">
                <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
            </div>
        </div>
    </div>
    <!-- End Top Search -->

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>상품 목록</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active" style="color: white">상품 목록</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Shop Detail  -->
    <div class="shop-detail-box-main">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active"> <img class="d-block w-100" src="/upload/<%= product.name %>.jpg" alt="First slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="/images/pro4-2.jpg" alt="Second slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="/images/pro4-3.jpg" alt="Third slide"> </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                  <i class="fa fa-angle-left" aria-hidden="true"></i>
                  <span class="sr-only">Previous</span>
               </a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                  <i class="fa fa-angle-right" aria-hidden="true"></i>
                  <span class="sr-only">Next</span>
               </a>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="/images/pro4.jpg" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="1">
                                <img class="d-block w-100 img-fluid" src="/images/pro4-2.jpg" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="2">
                                <img class="d-block w-100 img-fluid" src="/images/pro4-3.jpg" alt="" />
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <h2><%= product.name %></h2>
                        <h5><%= product.weight %>당 <%= product.price %>원</h5>
                  <h4>Short Description:</h4>
                  <p><%= product.body %>
                   </p>
                  <ul>
                     <li>
                        <div class="form-group quantity-box">
                           <label class="control-label">수량(100g당 1개로 센다)</label>
                           <input class="form-control" value="0" min="0" max="20" type="number">
                        </div>
                     </li>
                  </ul>

                  <div class="price-box-bar">
                     <div class="cart-and-bay-btn">
                        <a class="btn hvr-hover" data-fancybox-close="" href="#">바로 구매 </a>
                        <a class="btn hvr-hover" data-fancybox-close="" href="#">장바구니 담기</a><br><br>
                        <a class="btn hvr-hover" data-fancybox-close="" onclick="showPopup()">배송지 선택</a>
                        <!-- <form>
                           <select name="배송지">
                              <option value="none">기본 배송지</option>
                           </select>
                        </form> -->
                     </div>
                  </div>

                  <div id="popup_choice" class="overlay">
                    <div class="popup">
                  		<h2>Here i am</h2>
                  		<a class="close" href="#">&times;</a>
                  		<div class="content">
                  			Thank to pop me out of that button, but now i'm done so you can close this window.
                  		</div>
                  	</div>
                  </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- End Cart -->
</body>